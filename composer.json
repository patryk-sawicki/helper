{
    "name": "patryk-sawicki/helper",
    "description": "A set of helpful tools for PHP.",
    "license": "MIT",
    "authors": [
        {
            "name": "Patryk Sawicki",
            "email": "patryk@patryksawicki.pl"
        }
    ],
    "autoload": {
        "psr-4": {
            "PatrykSawicki\\Helper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PatrykSawicki\\Helper\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "intervention/image": "^3.5",
        "laravel/framework": "^8.00 || ^9.00 || ^10.00 || ^11.00"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "extra": {
        "laravel": {
            "providers": [
                "PatrykSawicki\\Helper\\app\\Providers\\HelperServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
